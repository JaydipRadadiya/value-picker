<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/movieFilteringPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/yearTv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Picked Movie Filters"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="@string/font_family_medium"/>

    <TextView
        android:id="@+id/genreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/genrePicker"
        android:layout_toStartOf="@+id/yearTv"
        android:layout_marginBottom="30dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryText"
        tools:text="Genre: Action"/>

    <TextView
        android:id="@+id/yearTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/yearPicker"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryText"
        tools:text="Year: 1987"/>

    <TextView
        android:id="@+id/serviceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/servicePicker"
        android:layout_toEndOf="@+id/yearTv"
        android:layout_marginBottom="30dp"
        android:textSize="15sp"
        android:textColor="@color/colorPrimaryText"
        tools:text="Service: Netflix"/>

    <com.paulrybitskyi.valuepicker.ValuePickerView
        android:id="@+id/genrePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/yearPicker"
        style="@style/MovieFilteringPicker"/>

    <com.paulrybitskyi.valuepicker.ValuePickerView
        android:id="@+id/yearPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        style="@style/MovieFilteringPicker"/>

    <com.paulrybitskyi.valuepicker.ValuePickerView
        android:id="@+id/servicePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/yearPicker"
        style="@style/MovieFilteringPicker"/>

</RelativeLayout>